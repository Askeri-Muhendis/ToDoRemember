<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingBottom="4dp"
    tools:context=".ui.addtodo.AddTodoBottomSheetFragment">


    <EditText
        android:id="@+id/et_add_todo"
        android:layout_width="0dp"
        android:hint="Yapmam gereken ne ?"
        android:layout_height="wrap_content"
        android:saveEnabled="true"
        android:focusableInTouchMode="true"
        android:maxHeight="60dp"
        android:textCursorDrawable="@color/todo_cursor"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="deneme yapiyoruz deneme yapiyoruz deneme yapiyoruz deneme yapiyoruz " />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add_send"
        app:layout_constraintBottom_toBottomOf="@+id/et_add_todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_add_todo" />


</androidx.constraintlayout.widget.ConstraintLayout>